<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/primerFragment">

    <fragment
        android:id="@+id/primerFragment"
        android:name="com.dev.leonardom.navigationcomponent.PrimerFragment"
        android:label="Primer Fragmento"
        tools:layout="@layout/fragment_primer" />

    <fragment
        android:id="@+id/segundoFragment"
        android:name="com.dev.leonardom.navigationcomponent.SegundoFragment"
        android:label="Segundo Fragmento"
        tools:layout="@layout/fragment_segundo" />

    <fragment
        android:id="@+id/tercerFragment"
        android:name="com.dev.leonardom.navigationcomponent.TercerFragment"
        android:label="Tercer Fragmento"
        tools:layout="@layout/fragment_tercero">

        <deepLink
            android:id="@+id/deepLink"
            app:uri="www.componentenav.dev/{texto}" />

        <argument
            android:name="texto"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <fragment
        android:id="@+id/cuartoFragment"
        android:name="com.dev.leonardom.navigationcomponent.CuartoFragment"
        android:label="Cuarto Fragmento"
        tools:layout="@layout/fragment_cuarto" />

    <action
        android:id="@+id/action_global_cuartoFragment"
        app:destination="@id/cuartoFragment"/>

</navigation>